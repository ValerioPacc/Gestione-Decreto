<mvc:View
    height="100%"
    xmlns:f="sap.f"
    xmlns:form="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:u="sap.ui.unified"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    xmlns="sap.m"
    controllerName="gestione1.controller.wizard"
>
    <NavContainer id="wizardNavContainer">
        <f:DynamicPage stickySubheaderProvider="CreateProductWizard" toggleHeaderOnTitleClick="false" class="sapUiNoContentPadding" showFooter="true">
            <f:title>
                <f:DynamicPageTitle>
                    <f:heading>
                        <Title text="IPE Apertura Dati anagrafico-contabili IPE" />
                    </f:heading>
                </f:DynamicPageTitle>
            </f:title>
            <f:header>
                <f:DynamicPageHeader id="h1" pinnable="false">
                    <l:HorizontalLayout allowWrapping="true">
                        <l:VerticalLayout class="sapUiMediumMarginEnd" visible="{/header1Visible}">
                            <HBox id="idHBox1">
                                <VBox id="idIpe" class="sapUiSmallMargin" width="50%">
                                    <Label id="IpeH" text="{i18n>Ipe}" design="Bold" />
                                    <Text id="Ipe1H" text="{}" />
                                </VBox>
                                <VBox id="idVBox1" class="sapUiSmallMargin" width="50%">
                                    <Label id="Eserecizio1" text="{i18n>esercizio}" design="Bold" />
                                    <Text id="eserecizio1" text="{}" wrapping="true" />
                                </VBox>
                                <VBox id="idVBox2" class="sapUiSmallMargin" width="80%">
                                    <Label id="Amm1" text="{i18n>amministrazione}" design="Bold" />
                                    <Text id="amm1" text="{}" />
                                </VBox>
                                <VBox id="idVBox3" class="sapUiSmallMargin" width="80%">
                                    <Label id="Rag1" text="{i18n>Ragioneria}" design="Bold" />
                                    <Text id="rag1" text="{}" />
                                </VBox>
                            </HBox>

                            <HBox id="idHBox2">
                                <VBox id="idBenH" class="sapUiSmallMargin" width="50%">
                                    <Label id="BenH" text="{i18n>beneficiarioH}" design="Bold" />
                                    <Text id="Ben1H" text="{}" />
                                </VBox>
                                <VBox id="idVBox4" class="sapUiSmallMargin" width="50%">
                                    <Label id="TotImp1" text="{i18n>totimp}" design="Bold" />
                                    <Text id="totImp1" text="{}" wrapping="true" />
                                </VBox>
                                <VBox id="idVBox5" class="sapUiSmallMargin" width="80%">
                                    <Label id="RicAss1" text="{i18n>NricAss}" design="Bold" />
                                    <Text id="ricAss1" text="{}" />
                                </VBox>
                            </HBox>
                        </l:VerticalLayout>
                    </l:HorizontalLayout>
                </f:DynamicPageHeader>
            </f:header>
            <f:content>
                <Wizard id="CreateProductWizard" class="sapUiResponsivePadding--header sapUiResponsivePadding--content" showNextButton="false" navigationChange="handleNavigationChange" renderMode="Page">
                    <WizardStep id="SelezioneTitoliStep" title="Contratto" validated="true">
                        <Label text="{i18n>Ccontratto}" />
                        <Switch  state="true" customTextOff="No" customTextOn="Si" change="controlSwitch" id="switch" />
                        <Panel height="100%">
                            <content>
                                <l:Grid>
                                    <l:content>
                                        <VBox>
                                            <Label text="{i18n>Eserc}" required="true" />
                                            <ComboBox id="es_decreto" change="OnSelect" app:field="Zzanno" selectedKey="{= ${IpeEntitySet>/Zbozza} === 'X' ? ${IpeEntitySet>/Zzanno} : ${temp>/SelectedDecree/Esercizio} }" enabled="true" items="{comboBox>/Esercizio}">
                                                <core:Item id="es_decreto1" key="{comboBox>id}" text="{comboBox>id}" />
                                            </ComboBox>
                                            <layoutData>
                                                <l:GridData span="L3 M3 S3" />
                                            </layoutData>
                                        </VBox>
                                      
                                        <VBox>
                                            <Label text="{i18n>amministrazione}" required="true" />
                                            <Input value="{temp>/SelectedDecree/Amministrazione}" enabled="true" id="ammin1"/>
                                            <layoutData>
                                                <l:GridData span="L3 M3 S3" />
                                            </layoutData>
                                        </VBox>
                                        <VBox>
                                            <Label text="{i18n>Ncontratto}" required="true" />
                                            <Input
                                                id="ValueHelpContratto"
                                                showValueHelp="true"
                                                enabled="{/FilterSwitch1}"
                                                valueHelpOnly="true"
                                                value="4500001128"
                                                valueHelpRequest="handleContractValueHelp"
                                                app:FieldName="ValueHelpContratto"
                                                app:filterTableField="ValueHelpContratto"
                                                class="sapUiSmallMarginBottom"
                                            />
                                            <!--core:Item key="{ContrattoOrdine}" text="{ContrattoOrdine}"/-->
                                            <layoutData>
                                                <l:GridData span="L3 M3 S3" />
                                            </layoutData>
                                        </VBox>
                                        <VBox>
                                            <Label text="{i18n>Dstipula}" required="true" />
                                            <Input id="Dstipula"  showValueHelp="true" enabled="false" app:fieldName="DataStipula" app:filterTableField="DataStipula" class="sapUiSmallMarginBottom" />
                                            <layoutData>
                                                <l:GridData span="L3 M3 S3" />
                                            </layoutData>
                                        </VBox>
                                        <VBox>
                                            <Label text="{i18n>descrizione}" />
                                            <TextArea id="descContratto" width="90%" enabled="false" />
                                            <layoutData>
                                                <l:GridData span="L9 M9 S9" />
                                            </layoutData>
                                        </VBox>
                                        <VBox>
                                            <Label text="{i18n>beneficiarioH}" />
                                            <Input id="beneficiario" value="{IpeEntitySet>/NameFirst} {IpeEntitySet>/NameLast}" enabled="false" />
                                            <layoutData>
                                                <l:GridData span="L3 M3 S3" />
                                            </layoutData>
                                        </VBox>
                                        <VBox>
                                            <Label text="{i18n>cig}" />
                                            <Input id="cig" value="{IpeEntitySet>/Zzcig}" enabled="false" />
                                            <layoutData>
                                                <l:GridData span="L4 M3 S3" />
                                            </layoutData>
                                        </VBox>
                                        <VBox>
                                            <Label text="{i18n>cup}" />
                                            <Input id="cup" showValueHelp="true" value="{IpeEntitySet>/Zzcup}" enabled="{= !${/FilterSwitch1} }" valueHelpOnly="true" valueHelpRequest="handleValueHelp" app:FieldName="CUP" app:filterTableField="CUP" class="sapUiSmallMarginBottom" />
                                            <layoutData>
                                                <l:GridData span="L4 M3 S3" />
                                            </layoutData>
                                        </VBox>
                                        <VBox>
                                            <Label text="{i18n>ImpTot}" wrapping="true" />
                                            <Input id="importoCont" value="{IpeEntitySet>/Ktwrt}" width="60%" enabled="false" />
                                            <layoutData>
                                                <l:GridData span="L6 M3 S3" />
                                            </layoutData>
                                        </VBox>
                                    </l:content>
                                </l:Grid>

                                <Table class="sapUiSizeCompact" id="idpsfin" includeItemInSelection="true" items="{>/items}" headerText="Pianificazione Finanziaria">
                                    <columns>
                                        <Column width="12%">
                                            <Label text="Esercizio" />
                                        </Column>
                                        <Column width="18%">
                                            <Label text="Posizione Finanziaria" />
                                        </Column>
                                        <Column width="12%">
                                            <Label text="N. PNI" />
                                        </Column>
                                        <Column width="12%">
                                            <Label text="Descrizione PNI" />
                                        </Column>
                                        <Column width="13%">
                                            <Label text="Importi Impegnabili" />
                                        </Column>
                                    </columns>
                                    <ColumnListItem>
                                        <Text text="{DecretoImpegnoSet>Numero NI}" />
                                        <Text text="{DecretoImpegnoSet>Struttura Amministrativa Responsabile}" />
                                        <Text text="{DecretoImpegnoSet>Posizione Finanziaria}" />
                                        <Text text="{DecretoImpegnoSet>Oggetto della spesa}" />
                                        <Text text="{DecretoImpegnoSet>Mese}" />
                                    </ColumnListItem>
                                </Table>
                            </content>
                        </Panel>

                        <OverflowToolbar>
                            <Button text="Indietro" type="Emphasized" press="onBackButton" />
                            <Button text="Avanti" type="Emphasized" press="onNextButton" />
                            <ToolbarSpacer />
                            <Button type="Emphasized" text="Salva in bozza" press="onRegIpebozza" />
                        </OverflowToolbar>
                    </WizardStep>
                    <WizardStep id="Beneficiario1" validated="true" title="Beneficiario" activate="additionalInfoValidation">
                        <Toolbar>
                            <ToolbarSpacer />
                            <Button type="Emphasized" text="Richiedi Anagrafica Beneficiario" press="onOpenFragment" />
                            <Button type="Emphasized" text="Inserisci Mod.Pag.-Iban" press="onOpenDialogModPag" />
                        </Toolbar>
                        <RadioButtonGroup id="Person" columns="3" width="100%">
                            <RadioButton text="Persona Fisica" selected="true" />
                            <RadioButton text="Persona Giuridica" />
                        </RadioButtonGroup>
                        <form:SimpleForm
                            id="SimpleFormChange480_12120"
                            editable="true"
                            layout="ResponsiveGridLayout"
                            labelSpanXL="4"
                            labelSpanL="4"
                            labelSpanM="12"
                            labelSpanS="12"
                            adjustLabelSpan="false"
                            emptySpanXL="0"
                            emptySpanL="0"
                            emptySpanM="0"
                            emptySpanS="0"
                            columnsXL="2"
                            columnsL="2"
                            columnsM="1"
                            singleContainerFullSize="false"
                        >
                            <VBox>
                                <Label text="Beneficiario:" required="true" />
                                <Input id="beneficiario1" showValueHelp="true" enabled="true"  valueHelpOnly="true" valueHelpRequest="handleBenValueHelp" app:FieldName="Ben" app:filterTableField="Ben" class="sapUiSmallMarginBottom" />

                                <layoutData>
                                    <l:GridData span="L6 M3 S3" />
                                </layoutData>
                            </VBox>
                        </form:SimpleForm>

                        <HBox justifyContent="Center" class="sapUiLargeMarginBegin">
                            <items>
                                <VBox class="sapUiLargeMarginBegin">
                                    <Label text="Codice Fiscale:" />
                                    <Input id="cFiscale" enabled="false" value="{IpeEntitySet>/Stcd1}" />
                                    <Label text="Nome:" />
                                    <Input id="nome" enabled="false" value="{IpeEntitySet>/NameFirst}" />
                                    <Label text="Ragione Sociale:" />
                                    <Input id="rSociale" enabled="false" value="{IpeEntitySet>/ZzragSoc}" />
                                </VBox>

                                <VBox class="sapUiLargeMarginBegin">
                                    <Label text="Codice Fiscale Estero:" />
                                    <Input id="cFiscaleE" enabled="false" value="{= ${IpeEntitySet>/Zbozza} === 'X' ? ${IpeEntitySet>/Taxnumxl} : ${temp>/Step2/cfe} }" />
                                    <Label text="Cognome:" />
                                    <Input id="cognome" enabled="false" value="{= ${IpeEntitySet>/Zbozza} === 'X' ? ${IpeEntitySet>/NameLast} : ${temp>/Step2/cognome} }" />
                                    <Label text="Partita IVA:" />
                                    <Input id="IVA" enabled="false" value="{= ${IpeEntitySet>/Zbozza} === 'X' ? ${IpeEntitySet>/Stcd2} : ${temp>/Step2/IVA} }" />
                                </VBox>
                            </items>
                        </HBox>

                        <!-- <HBox alignItems="End" justifyContent="Start" direction="Column">
                      
				 
                 	
			</HBox> -->

                        <core:Fragment fragmentName="gestione1.fragment.modPagamento" type="XML" />
                        <!-- <core:Fragment fragmentName="gestione1.fragment.anagrafica" type="XML" /> -->
                        <OverflowToolbar>
                            <Button text="Indietro" type="Emphasized" press="onBackButton" />
                            <Button text="Avanti" type="Emphasized" press="onNextButton" />
                            <ToolbarSpacer />
                            <Button type="Emphasized" text="Salva in bozza" app:Bozza="{IpeEntitySet>/Zbozza}" press="onRegIpebozza" />
                        </OverflowToolbar>
                    </WizardStep>

                    <WizardStep id="ImputCont" validated="true" activate="optionalStepActivation" title="Imputazione Contabile">
                        <form:SimpleForm id="form" editable="true" width="100%">
                            <VBox>
                                <HBox>
                                    <Label text="Sottoposto a richiesta di Assenso Preventivo" labelFor="Sottoposto a richiesta di Assenso Preventivo" />
                                    <Switch  customTextOff="No" customTextOn="Si" change="handleChange" />
                                    <layoutData>
                                        <l:GridData span="L3 M3 S3" />
                                    </layoutData>
                                </HBox>
                                <Title text="" />
                                <HBox>
                                    <Label text="Posizione Finanziaria:" labelFor="Posizione Finanziaria:" required="true" />
                                    <Input id="pFin" value="S020144014.290603.020201" showSuggestion="true" showValueHelp="true" valueHelpRequest="onValueHelpRequest" valueHelpOnly="true"/>
                                    <layoutData>
                                        <l:GridData span="L3 M3 S3" />
                                    </layoutData>
                                </HBox>
                                <Title text="" />
                                <HBox>
                                    <Label text="PNI" labelFor="PNI" />
                                    <Switch  customTextOff="No" customTextOn="Si" change="handleChange" enabled="false"/>
                                    <layoutData>
                                        <l:GridData span="L3 M3 S3" />
                                    </layoutData>
                                </HBox>
                                <Title text="" />
                                <HBox>
                                    <Label text="Oggetto della spesa:" labelFor="Oggetto della spesa:" />
                                    <Input value="{IpeEntitySet>/Ktext}" />
                                </HBox>
                            </VBox>
                            <VBox>
                                <HBox>
                                    <Label text="ID Richiesta Assenso Preventivo:" labelFor="ID Richiesta Assenso Preventivo:" />
                                    <Input id="IdAssPre" value="{IpeEntitySet>/ZidRich}" showSuggestion="true"  showValueHelp="true" enabled="false" valueHelpOnly="true"/>
                                    <layoutData>
                                        <l:GridData span="L3 M3 S3"  />
                                    </layoutData>
                                </HBox>
                                <Title text="" />
                                <HBox>
                                    <Label text="Struttura Amministrativa Responsabile:" labelFor="Struttura Amministrativa Responsabile:" wrapping="true" required="true"/>
                                    <Input  showSuggestion="true" value="S020000308400000" showValueHelp="true" valueHelpRequest="onValueHelpRequest2" valueHelpOnly="true" />
                                    <layoutData>
                                        <l:GridData span="L3 M3 S3" />
                                    </layoutData>
                                </HBox>
                            </VBox>
                        </form:SimpleForm>

                        <OverflowToolbar>
                            <Button text="Indietro" type="Emphasized" press="onBackButton" />
                            <Button text="Avanti" type="Emphasized" press="onNextButton" />
                            <ToolbarSpacer />
                            <Button type="Emphasized" text="Salva in bozza" />
                        </OverflowToolbar>
                    </WizardStep>

                    <WizardStep id="idAttoAuth" validated="true" activate="optionalStepActivation" title="Atto Autorizzativo">
                        <form:SimpleForm editable="true">
                            <VBox>
                                <HBox>
                                    <Label text="Natura Atto:" labelFor="Natura Atto:" />
                                    <ComboBox id="naturAtto" items="{path: 'temp>/NaturaAttoSet', sorter: { path: 'Descrizione' }}" >
                                        <core:Item id="nAtto" key="{temp>Descrizione}" text="{temp>Descrizione} " />
                                    </ComboBox>
                                    <layoutData>
                                        <l:GridData span="L3 M3 S3" />
                                    </layoutData>
                                </HBox>
                                <Title text="" />
                                <HBox visible="{/FilterSwitch1}">
                                    <Label text="{i18n>tipoAtto}" labelFor="Tipo Atto:" />
                                    <ComboBox id="idTypeCon" items="{path: 'temp>/IpeEntitySet', sorter: { path: 'Bsart' }}" >
                                        <core:Item key="{temp>Bsart}" text="{temp>Bsart}" />
                                    </ComboBox>
                                    <layoutData>
                                        <l:GridData span="L3 M3 S3" />
                                    </layoutData>
                                </HBox>
                            </VBox>
                            <VBox>
                                <HBox>
                                    <Label text="{i18n>Natto}" labelFor="{i18n>Natto}" />
                                    <ComboBox id="numConAtt" enabled="false" items="{path: 'temp>/IpeEntitySet', sorter: { path: 'Znumcontratt' }}">
                                        <core:Item key="{temp>Znumcontratt}" text="{temp>Znumcontratt}" />
                                    </ComboBox>
                                    <layoutData>
                                        <l:GridData span="L3 M3 S3" />
                                    </layoutData>
                                </HBox>
                                <Title text="" />
                                <HBox visible="{/FilterSwitch2}">
                                    <Label text="Forma di aggiudicazione:" labelFor="Forma di aggiudizazione:" />
                                    <MultiComboBox id="formAgg" items="{path: 'temp>/IpeEntitySet', sorter: { path: 'Zzgara' }}" selectionFinish="onSelectionFinish">
                                        <core:Item key="{temp>Zzgara}" text="{temp>Zzgara}" />
                                    </MultiComboBox>
                                    <layoutData>
                                        <l:GridData span="L3 M3 S3" />
                                    </layoutData>
                                </HBox>
                            </VBox>
                            <VBox>
                                <HBox>
                                    <Label text="Data Atto:" labelFor="Data Atto:" />
                                    <DatePicker id="dataAtt" displayFormat="dd/MM/yyyy" enabled="false"  value="{= ${path: 'temp>/IpeEntitySet/Zdataatto' , formatter: '.formatter.convert' } !== null ? ${path: 'temp>/IpeEntitySet/Zdataatto' , formatter: '.formatter.convert' } : '' }"/>
                                </HBox>
                            </VBox>
                        </form:SimpleForm>
                        <OverflowToolbar>
                            <Button text="Indietro" type="Emphasized" press="onBackButton" />
                            <Button text="Avanti" type="Emphasized" press="onNextButton" />
                            <ToolbarSpacer />
                            <Button type="Emphasized" text="Salva in bozza" press="onRegIpebozza"/>
                        </OverflowToolbar>
                    </WizardStep>

                    <WizardStep id="idTipoSpesa" validated="true" activate="optionalStepActivation" title="Tipologia ordinazione della spesa">
                        <form:SimpleForm editable="true">
                            <VBox>
                                <HBox>
                                    <CheckBox id="CB1" text="Mandato Informatico" selected="false" select="onChangeSelect" />
                                </HBox>
                            </VBox>
                            <VBox>
                                <HBox>
                                    <CheckBox id="CB2" text="Ordine di accreditamento" selected="false" enabled="false" />
                                </HBox>
                            </VBox>
                            <VBox>
                                <HBox>
                                    <CheckBox id="CB3" text="Note di Imputazione" selected="false" />
                                </HBox>
                            </VBox>
                        </form:SimpleForm>
                        <OverflowToolbar>
                            <Button text="Indietro" type="Emphasized" press="onBackButton" />
                            <Button text="Avanti" type="Emphasized" press="onNextButton" />
                            <ToolbarSpacer />
                            <Button type="Emphasized" text="Salva in bozza" press="onRegIpebozza"/>
                        </OverflowToolbar>
                    </WizardStep>
                     <WizardStep id="EsigiId" validated="true" activate="optionalStepActivation" title="Esigibilità">
                        <Toolbar>
                            <ToolbarSpacer />
                            <Title text="IPE-impegno pluriennale ad esigibilità" textAlign="Center" />
                            <ToolbarSpacer />
                        </Toolbar>
                        <IconTabBar id="idIconTabBar1" class="TabBar">
                            <items>
                                <IconTabFilter text="Competenza" key="info">
                                    <core:Fragment fragmentName="gestione1.fragment.EsigTable" type="XML" />
                                </IconTabFilter>
                                <IconTabFilter text="Residui" key="results">
                                </IconTabFilter>
                            </items>
                        </IconTabBar>
                        <OverflowToolbar>
                            <Button text="Indietro" type="Emphasized" press="onBackButton" />
                            <ToolbarSpacer />
                            <Button text="Salva IPE" type="Emphasized" press="" enabled="false" />
                        </OverflowToolbar>
                    </WizardStep>
                </Wizard>
            </f:content>

            <f:footer />
        </f:DynamicPage>
    </NavContainer>
</mvc:View>